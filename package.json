{
  "name": "slate",
  "version": "1.0.0",
  "description": "Slate is lightweight app integrated with canvacore's image manipulation",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "electron .",
    "dist": "npm run build && electron-builder", 
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.slate.app",
    "productName": "Slate",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "!assets/generated"
    ],
    "win": {
      "icon": "assets/icons/slate.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "assets/icons/slate.icns"
    },
    "linux": {
      "icon": "assets/icons/slate.png",
      "target": [
        "AppImage"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uitgeteld/slate"
  },
  "keywords": [
    "slate",
    "canvacore",
    "lightweight",
    "iamge",
    "manipulation"
  ],
  "author": "uitgeteld",
  "license": "Apache-2.0",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "sass": "^1.93.2",
    "svelte": "^5.40.1",
    "svelte-preprocess": "^6.0.3",
    "vite": "^7.1.10"
  }
}